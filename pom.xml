<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.trino.benchto</groupId>
    <artifactId>benchto-base</artifactId>
    <version>0.20-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>benchto-base</name>

    <parent>
        <groupId>io.airlift</groupId>
        <artifactId>airbase</artifactId>
        <version>100</version>
    </parent>

    <inceptionYear>2015</inceptionYear>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <modules>
        <module>benchto-service</module>
        <module>benchto-driver</module>
    </modules>

    <properties>
        <java.version>1.8</java.version>

        <encoding>UTF-8</encoding>

        <project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${encoding}</project.reporting.outputEncoding>
        <project.resources.sourceEncoding>${encoding}</project.resources.sourceEncoding>

        <air.main.basedir>${project.basedir}</air.main.basedir>

        <air.check.skip-extended>true</air.check.skip-extended>
        <air.check.skip-license>false</air.check.skip-license>
        <air.check.fail-license>true</air.check.fail-license>

        <air.check.fail-checkstyle>true</air.check.fail-checkstyle>
        <air.check.skip-checkstyle>false</air.check.skip-checkstyle>

        <air.check.fail-dependency>false</air.check.fail-dependency>

        <air.check.fail-duplicate-finder>false</air.check.fail-duplicate-finder>

        <dep.assertj.version>3.11.1</dep.assertj.version>
        <dep.commons.cli>1.3.1</dep.commons.cli>
        <dep.commons.math3>3.6.1</dep.commons.math3>
        <dep.commons.io>2.7</dep.commons.io>
        <dep.guava.version>31.0.1-jre</dep.guava.version>
        <dep.trino.jdbc.version>363</dep.trino.jdbc.version>
        <dep.jackson.version>2.10.3</dep.jackson.version>
        <dep.jsonpath.version>2.6.0</dep.jsonpath.version>
        <dep.junit.version>4.13.2</dep.junit.version>
        <dep.hamcrest.version>2.2</dep.hamcrest.version>
        <dep.hsqldb.version>2.3.4</dep.hsqldb.version>
        <dep.logback.version>1.2.11</dep.logback.version>
        <dep.postgresql.jdbc.version>42.2.8</dep.postgresql.jdbc.version>
        <dep.slf4j.version>1.7.32</dep.slf4j.version>
        <dep.jackson.jsr310>2.9.10</dep.jackson.jsr310>
        <dep.jackson.hibernate>2.6.4</dep.jackson.hibernate>
        <dep.spring.boot.version>2.1.18.RELEASE</dep.spring.boot.version>
        <dep.spring.retry.version>1.3.3</dep.spring.retry.version>
        <dep.freemarker>2.3.22</dep.freemarker>
        <dep.mockito.version>2.23.4</dep.mockito.version>
        <dep.javax.validation.api.version>2.0.1.Final</dep.javax.validation.api.version>
        <dep.javax.annotation.api.version>1.3.2</dep.javax.annotation.api.version>
        <dep.hibernate.version>5.3.18.Final</dep.hibernate.version>
        <dep.hibernate.jpa.version>1.0.2.Final</dep.hibernate.jpa.version>
        <dep.hibernate.validator.version>5.3.6.Final</dep.hibernate.validator.version>
        <dep.aspectjweaver.version>1.9.6</dep.aspectjweaver.version>
        <dep.javax.el>2.2.4</dep.javax.el>
        <dep.javax.xml.bind.api.version>2.3.2</dep.javax.xml.bind.api.version>
        <dep.testcontainers.version>1.16.0</dep.testcontainers.version>
        <dep.javassist.version>3.26.0-GA</dep.javassist.version>
        <dep.byte-buddy.version>1.9.11</dep.byte-buddy.version>
        <dep.jna.version>5.8.0</dep.jna.version>
    </properties>

    <scm>
        <connection>scm:git:https://github.com/trinodb/benchto.git</connection>
        <url>https://github.com/trinodb/benchto</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/
            </url>
        </repository>
    </distributionManagement>

    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.9.1</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.5</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>it</id>
            <modules>
                <module>benchto-it</module>
            </modules>
        </profile>
    </profiles>

